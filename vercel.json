{
    "version": 2,  
  
    "builds": [
      {
        "src": "bbook-ackend",  
        "use": "@now/python",  
        "config": {
          "maxLambdaSize": "15mb"  
        }
      }
    ],
  
    "routes": [
      {
        "src": "/api/(.*)",  
        "dest": "book-backend/manage.py", 
        "methods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"]
      },
      {
        "src": "/(.*)",  
        "dest": "book-frontend/build/$1",  
        "continue": true
      }
    ],
  
    "env": {
      "DJANGO_SETTINGS_MODULE":"book-backend.settings"
    }
}